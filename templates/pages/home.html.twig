{% extends "base.html.twig"%}

{% block title %} SymProject - Accueil {% endblock %}
{% block body %}
<div class="container mt-4">
    <div class="jumbotron">
    <h1 class="display-4">Bienvenue sur SymProject</h1>

    <p class="lead">Symproject est une application qui va te permettre de creer des éléments et de concevoir des projets</p>
    <hr class="my-4">
    <p> Pour Commencer, rendez-vous sur la page d'inscription pour utiliser l'application</p>

    <a class="btn btn-primary btn-lgz" href="{{ path('security.registration') }}" role="button"> Inscription</a>
    </div>
        <div class="recipes">
			<h2 class="mt-4">Projets de la communauté</h2>
			<div class="d-flex justify-content-between">
				{% for recipe in recipes %}
					<div class="card border-primary mb-3" style="max-width: 20rem;">
						<div class="card-header">Projet n°{{ recipe.id }}</div>
						<div class="card-body">
							<h4 class="card-title">
								<a href="{{ path('recipe.show', {id: recipe.id}) }}">{{ recipe.name }}</a>
							</h4>
							<p class="card-text">{{ recipe.description|slice(0, 100) ~ '...' }}</p>
						</div>
					</div>
				{% endfor %}
			</div>
	</div>
</div>

{% endblock %}